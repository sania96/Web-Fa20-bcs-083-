<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Recipe App</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1>Recipe App</h1>
  <ul>
    <% recipes.forEach((recipe) => { %>
      <li>
        <h3><%= recipe.title %></h3>
        <p><%= recipe.description %></p>
        <a href="/recipes/<%= recipe._id %>/edit" class="edit-link">Edit</a>
        <form method="POST" action="/recipes/<%= recipe._id %>?_method=DELETE" style="display: inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
  <a class="add-link" href="/recipes/new">Add New Recipe</a>

</body>
</html>
